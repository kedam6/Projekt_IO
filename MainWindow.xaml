<Window x:Class="IO_Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid ScrollViewer.HorizontalScrollBarVisibility="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="0*" />
            <ColumnDefinition Width="513*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="0*" />
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Height="3" Margin="3,118,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="1" Grid.Column="2" />
        <TextBox x:Name="editSpace" Height="277" TextWrapping="Wrap" Width="495" Margin="8,33,0,0" Grid.Column="2" HorizontalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
        <Menu Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="517">
            <MenuItem x:Name="fileMenu" Header="File" />
            <MenuItem x:Name="editMenu" Header="Edit" />
            <MenuItem x:Name="helpMenu" Header="Help" />
        </Menu>
    </Grid>
</Window>