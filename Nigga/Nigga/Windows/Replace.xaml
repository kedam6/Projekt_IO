<Window x:Class="Nigga.Replace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Replace" Height="210.4" Width="236.8">
    <Grid Background="#FFB2C5C5">
        <Label Content="Find what :" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="74"/>
        <TextBox x:Name="HereIsText" HorizontalAlignment="Left" Height="20" Margin="10,35,0,0" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Width="210"/>
        <Label Content="Finds:" HorizontalAlignment="Left" Height="26" Margin="10,60,0,0" VerticalAlignment="Top" Width="48"/>
        <TextBlock x:Name="Finds" HorizontalAlignment="Left" Height="21" Margin="63,65,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="39" RenderTransformOrigin="0.352,0.235" LineHeight="20" TextAlignment="Center"/>
        <Label Content="Replace with:" HorizontalAlignment="Left" Height="25" Margin="10,86,0,0" VerticalAlignment="Top" Width="164"/>
        <TextBox x:Name="TextToReplace" HorizontalAlignment="Left" Height="20" Margin="10,111,0,0" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Width="210"/>
        <Button x:Name="poof" Content="Do it" HorizontalAlignment="Left" Height="25" Margin="94,146,0,0" VerticalAlignment="Top" Width="38" RenderTransformOrigin="-0.379,1.48" Click="FindItem_Click"/>
    </Grid>
</Window>
