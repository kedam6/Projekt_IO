<Window x:Class="Nigga.Replace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Replace" Height="300" Width="300">
    <Grid Background="#FFB2C5C5">
        <Label Content="Find what :" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="74"/>
        <TextBox x:Name="HereIsText" HorizontalAlignment="Left" Height="20" Margin="10,35,0,0" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Width="215"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="225,34,0,0" VerticalAlignment="Top" Width="30" Click="FindItem_Click"/>
        <Label Content="Finds:" HorizontalAlignment="Left" Height="26" Margin="10,60,0,0" VerticalAlignment="Top" Width="48"/>
        <TextBlock x:Name="Finds" HorizontalAlignment="Left" Height="21" Margin="63,65,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="39" RenderTransformOrigin="0.352,0.235" LineHeight="20" TextAlignment="Center"/>
        <Label Content="Replace with:" HorizontalAlignment="Left" Height="25" Margin="10,91,0,0" VerticalAlignment="Top" Width="164"/>
        <TextBox x:Name="TextToReplace" HorizontalAlignment="Left" Height="20" Margin="10,121,0,0" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Width="215"/>
        <Button Content="OK" HorizontalAlignment="Left" Height="20" Margin="225,121,0,0" VerticalAlignment="Top" Width="30"/>
    </Grid>
</Window>
